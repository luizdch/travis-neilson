.siteHeader {
   z-index 5
   position fixed
   top 0
   left 0
   padding 0
   margin 0
   @media $md-lg {
      width 135px // se mudar o width tambem tem que mudar o padding do main
      height 100%
      box-shadow 4px 0 8px 0 rgba($color-black1, .2)
   }
   @media $sm {
      flex-direction row
      justify-content space-between
      height 50px
      padding 0 $space-1 * 1.5
   }
   @media (min-width $md-minWidth) and (max-width 1000px) {
      width 110px
   }





   .siteLogo {
      preserveAspectRatio(5, 4)
      display flex
      @media $md-lg {
         width 90px
         margin-top $space-3
      }
      @media $sm {
         z-index 1
         width 40px
      }
      @media (min-width $md-minWidth) and (max-width 1000px) {
         width 80px
      }
   }
   .siteLogo img {
      fullBox()
   }





   nav {
      @media $md-lg {
         width auto
         margin auto
         text-align right
      }
      @media $sm {
         position absolute
         top 50px
         left 0
         padding 75px 0 25px 0
         transform translateY(-100%)
         background-color $color-white1
         transition all .5s ease
         box-shadow 0 4px 8px 0 rgba($color-black1, .2)
      }
   }
   nav.js-slide {
      top: 0
      transform translateY(0)
   }
   nav.js-slide ul {
      transform translateY(0)
   }
   nav ul {
      @media $sm {
         transform translateY(-30px)
         transition transform .5s ease
      }
   }
   nav li {
      @media $sm {
         text-align center
      }
   }
   nav li:not(:first-child) {
      @media $md-lg {
         margin-top $space-1
      }
      @media $sm {
         margin-top $space-1 * 1.5
      }
   }
   nav a {
      @media (min-width $md-minWidth) and (max-width 1000px) {
         font-size $font-1
      }
   }
   nav a:after, nav a.js-arrow:after {
      content ''
      position absolute
      width 0
      height 0
      top 50%
      right -10px
      transform translateY(-50%)
      border-style solid
      border-width 5px 5px 5px 0
      border-color transparent $color-black2 transparent transparent
   }
   nav a:after {
      @media $md-lg {
         display none
      }
      @media $sm {
         display none
      }
   }
   nav a.js-arrow:after {
      @media $md-lg {
         display block
      }
   }
   nav:hover a.js-arrow:after {
      @media $lg {
         display none
      }
   }
   nav a:hover:after, nav a.js-arrow:hover:after {
      @media $lg {
         display block
      }
   }





   .sm-navButton {
      width 40px
      height 28px
      overflow visible // evita que o IE corte o overflow
   }
   .sm-navButton span {
      position absolute
      width 100%
      height 4px
      left 0
      background-color $color-black2
      border-radius 2px
      transition all .3s ease
      outline 1px solid transparent // evita um glitch na animacao no firefox
      @media $md-lg {
         display none
      }
   }
   .sm-navButton span:nth-child(1) {
      top 0
   }
   .sm-navButton span:nth-child(2) {
      top 50%
      transform translateY(-50%)
   }
   .sm-navButton span:nth-child(3) {
      bottom 0
   }
   .sm-navButton.js-animate span:nth-child(1) {
      top: 50%
      transform translateY(-50%) rotate(45deg)
   }
   .sm-navButton.js-animate span:nth-child(2) {
      opacity 0
   }
   .sm-navButton.js-animate span:nth-child(3) {
      bottom: 50%
      transform translateY(50%) rotate(-45deg)
   }

}
