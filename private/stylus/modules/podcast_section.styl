.podcastSection {
   background-image url('../img/general/podcast_bg.jpg')
   @media $md-lg {
      padding $space-4 0
   }
   @media $sm {
      padding $space-3 $space-1
   }





   h2 {
      text-align center
   }





   .podcastGeneralComponentsContainer {
      flex-direction row
      align-items flex-start
      max-width px(col(12))
      margin-top $space-4
      @media (max-width 700px) {
         flex-direction column
         align-items center
      }
   }
   .podcastGeneralComponentsContainer img {
      width 150px
      height 150px
      margin-right $space-2
   }
   .podcastTextEmbedContainer {
      justify-content flex-start
      align-items flex-start
      @media (min-width 701px) {
         height 150px
      }
   }
   .podcastTextEmbedContainer p {
      font-size $font-1
      color $color-white1
      @media (max-width 700px) {
         margin-top $space-1
      }
   }
   .podcastTextEmbedContainer h3 {
      margin-top 5px
      font-size $font-4
      color $color-white1
      font-weight 100
   }
   iframe {
      width 100%
      height 36px
      @media (min-width 701px) {
         margin-top auto
      }
      @media (max-width 700px) {
         margin-top $space-2
      }
   }





   .buttonsContainer {
      flex-direction row
      max-width px(col(12))
      @media (max-width 450px) {
         flex-direction column
      }
   }
   .buttonsContainer .standardButton {
      margin-top $space-2
   }
   .websiteButton {
      background-color $color-purple1
      @media (min-width 451px) {
         margin-right $space-2
      }
   }
   .itunesButton {
      background-color $color-blue4
   }

}
