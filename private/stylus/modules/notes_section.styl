.notesSection {
   background-image url('../img/general/contact_bg.jpg')
   @media $md-lg {
      padding $space-4 0
   }





   .siteMaxWidthContainer {
      flex-direction column
   }





   h2 {
      text-align center
   }






   form {
      display flex
      width 100%
      max-width px(col(12))
      margin-top: $space-4
      border 3px solid $color-white1
      box-shadow 0 4px 8px 0 rgba($color-black1, .3)
      @media (min-width: 701px) {
         height 70px
         border-right none
      }
      @media (max-width: 700px) {
         flex-direction column
         border-bottom none
      }
   }
   form input {
      width 100%
      height 100%
      padding 15px 10px 0 0
      text-indent 10px
      background-color rgba($color-white1, .3)
      color $color-white1
      font-size $font-3
      @media (max-width: 700px) {
         height 70px
      }
   }
   form label {
      position absolute
      top 2px
      left 3px
      font-family 'fira sans'
      color $color-white1
   }
   .nameLabelInputContainer {
      @media (min-width 701px) {
         width 37%
      }
   }
   .emailLabelInputContainer {
      @media (min-width 701px) {
         width 43%
      }
   }
   .nameInput {
      @media (min-width 701px) {
         border-right 3px solid $color-white1
      }
      @media (max-width 700px) {
         border-bottom 3px solid $color-white1
      }
   }
   .subscribeButton {
      flex-grow 1
      background-color $color-white1
      color $color-yellow1
      font-size $font-4
      @media (max-width: 700px) {
         height 60px
      }
   }





   .descriptionsContainer {
      flex-direction row
      align-items flex-start
      max-width px(col(9))
      margin-top: $space-3
      @media (max-width: 500px) {
         flex-direction column
         padding 0 20px
      }
   }
   .descriptionsContainer p {
      color $color-white1
      font-size $font-1
      line-height 1.8
      font-style italic
      @media (min-width: 501px) {
         width col(6)
         padding 0 20px
      }
   }
   .descriptionsContainer p:first-child {
      @media (min-width: 501px) {
         text-align right
         border-right 2px solid $color-white1
      }
      @media (max-width: 500px) {
         padding-bottom: 20px
         border-bottom 2px solid $color-white1
      }
   }
   .descriptionsContainer p:last-child {
      @media (max-width 500px) {
         padding-top 20px
      }
   }
   .descriptionsContainer a {
      display table
      color $color-white1
   }
   .descriptionsContainer a:after {
      content ''
      display block
      position absolute
      width 100%
      height 1px
      bottom 2px
      background-color $color-white1
   }

}
